<script type="text/javascript">
    $(document).ready(function() {
        function sentFx() {
            $('.left .sent').animate({
                opacity: 1,
            },500);
            $('.left .sent').fadeIn('slow');
        }
        $('input.btn-2').click(function() {
            
        });
        $('.sent .link1').click(function() {
            $('.left .sent').fadeOut('slow');
            $(".left .inner form, .inner h3").fadeIn();
            $(".left .inner").animate({
                height: "480px",  						
            }, 500 );
            return false
        });
		
		$('#js-contact-form').submit(function(){
			$isValid = $(this).validate({
				rules:{
					name:'required',
					email:'required email',
					subject:'required',
					message:'required'
				}
			});
			
			$form = $(this);
			
			if($isValid.form()) {
				$data = $form.serialize();
				$('input, select, textarea', $form).attr('disabled','disabled');
				$.ajax({
					url:'/ajax/contact',
					data:$data,
					type:'POST',
					dataType:'json',
					success:function(){
						$('input, select, textarea', $form).removeAttr('disabled');
						$('input:not([type=submit]), select, textarea', $form).val('');
						$(".left .inner form, .inner h3").fadeOut();
						$(".left .inner").animate({
							height: "252px",
							opacity: 1,       
						}, 500 );
						sentFx();
					},
					error:function(){
						showError('Something went wrong.');
						$('input, select', $form).removeAttr('disabled');
					}
				});
				return false;
			}
			return false;
		});
		
		$('.js-type').change(function(){
			if($(this).val() == 'Partner') {
				$('.js-comapny-field').removeClass('hidden');
				$('.js-partner-subjects').removeClass('hidden');
				$('.js-partner-subjects select').removeAttr('disabled');
				$('.js-traveler-subjects').addClass('hidden');
				$('.js-traveler-subjects select').attr('disabled','disabled');
			} else {
				$('.js-comapny-field').addClass('hidden');
				$('.js-traveler-subjects').removeClass('hidden');
				$('.js-traveler-subjects select').removeAttr('disabled');
				$('.js-partner-subjects').addClass('hidden');
				$('.js-partner-subjects select').attr('disabled','disabled');
			}
		});
    });
</script>
