<script type="text/javascript">
    $(document).ready(function() {		
		$('#js-main-login-form').submit(function(){
			$isValid = $(this).validate({
				rules:{
					email:'required email',
					password:'required'
				},
				errorPlacement:function(error, element) {
					console.log(error);
					if(error.text() == "") {
						console.log(element);
						element.parents('div:eq(0)').removeClass('errorIn');
						element.parents('div:eq(0)').find('p').remove();
					} else {
						element.parents('div:eq(0)').addClass('errorIn');
						element.parents('div:eq(0)').append('<p><em></em>'+error.text()+'</p>');
					}
				}
			});
			
			return $isValid.form();
		});
    });
</script>
