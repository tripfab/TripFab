    <script type="text/javascript">
        $(document).ready(function() {
            $('input:not(.noclean)').ToggleInputValue();
			$('a.lb').fancybox({
				padding:0,
				overlayColor:'#ffffff',
				centerOnScroll:1,
				padding: 0,
				overlayOpacity: 0.8,
				showCloseButton: false
			});
			$('#forgot form').submit(function(){
				$form = $(this);
				$data = { email:$('input[name=resetemail]', $form).val() };
				if($data.email == 'Enter your e-mail' || $data.email == '')
					return false;
					
				$.ajax({
					url:'/ajax/resetpassword',
					type:'post',
					data:$data,
					success:function(response){
						if(response.type == 'success'){
							$.fancybox.close();
							showAlert(response.message);
						} else {
							$.fancybox.close();
							showError(response.message);
						}
					},
					error:function(){
						$.fancybox.close();
						showError('Something went wrong. Please try again later');
					}
				});
				
				return false;
			});
			$('form input').focus(function() {
				$(this).prev('label').addClass('hide');
			});
			$('form input').focusout(function() {
				if (!$(this).val()) {
					$(this).prev('label').removeClass('hide');
				}
			});
        });
    </script>
